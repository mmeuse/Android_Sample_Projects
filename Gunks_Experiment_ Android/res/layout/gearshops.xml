<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/FoodLodgeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/FoodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gear Shops near the Gunks"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
         <TextView
            android:id="@+id/EmsLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"   
            android:text="http://www.ems.com/"
            />
         
          <TextView
            android:id="@+id/RockAndSnowLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"   
            android:text="http://www.rockandsnow.com/store/"
            />        
    </LinearLayout>
